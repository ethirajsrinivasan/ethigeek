<% content_for :title, @project.title %>
<% content_for :blog_title do %>
<h3><%= @project.title %></h3>
<% end %>
<% content_for :description,  @project.title %>
<br>
<div class="container project">
  <div class="row">
    <div class="col">
      <% @project.sections.each do |section| %>
        <section  data-aos="fade-right">
          <h3><%= section.title %></h3>
          <div class="section-content"><%= section.content.html_safe %></div>
        </section>
      <% end  %>
      <% if @previous_project %>
        <div class="float-start mt-4">
          <div class="project_nav_link"><%= @previous_project.title %></div>
          <%= link_to "&larr; Previous project".html_safe, portfolios_path(title: @previous_project.title) %>
        </div>
      <% end %>
      <% if @next_project %>
        <div class="float-end mt-4">
          <div class="project_nav_link"><%= @next_project.title %></div>
          <%= link_to "Next project &rarr; ".html_safe, portfolios_path(title: @next_project.title) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<br>
